<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:stretchColumns="0"
    >
    <TableRow android:layout_marginTop="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:text="@string/date"
            android:textColor="@color/colorBlue"
            android:textSize="16sp" />
        <LinearLayout android:orientation="horizontal" android:layout_column="1">
            <Button
                android:id="@+id/buttonStartDate"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:layout_column="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/border"
                android:text="19/08/2020"
                android:padding="5dp"
                android:textColor="@color/colorBlack"/>
            <Button
                android:id="@+id/buttonEndDate"
                android:layout_height="wrap_content"
                android:layout_width="100dp"
                android:layout_column="2"
                android:layout_marginRight="10dp"
                android:background="@drawable/border"
                android:hint="@string/date"
                android:padding="5dp"
                android:textColor="@color/colorBlack" />
        </LinearLayout>

    </TableRow>
    <TableRow android:layout_marginTop="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/persons"
            android:textColor="@color/colorBlue"
            android:textSize="16sp" />
        <LinearLayout android:orientation="horizontal" android:layout_column="1">
            <Button
                android:id="@+id/buttonLessPersons"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_column="1"
                android:background="@color/colorBlue"
                android:text="-"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite" />
            <TextView
                android:id="@+id/txtViewPersons"
                android:layout_height="30dp"
                android:layout_width="40dp"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:text="2"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:background="@drawable/border"/>
            <Button
                android:id="@+id/buttonMorePersons"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_column="1"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorBlue"
                android:text="+"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </TableRow>
    <TableRow android:layout_marginTop="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/budget"
            android:paddingBottom="50dp"
            android:textColor="@color/colorBlue"
            android:textSize="16sp" />
        <LinearLayout android:orientation="horizontal" android:layout_column="1">
            <Spinner
                android:id="@+id/spinner1"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:spinnerMode="dropdown"
                android:background="@android:drawable/btn_dropdown"
                android:entries="@array/spinnerItems"/>
            <!-- android:background="@android:drawable/btn_dropdown"-->
            <!--style="@style/spinner_style"-->
        </LinearLayout>
    </TableRow>
    <TableRow android:layout_marginTop="10dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:text="@string/attractions"
            android:textColor="@color/colorBlue"
            android:textSize="16sp" />
        <LinearLayout android:orientation="horizontal" android:layout_column="1">
            <Button
                android:id="@+id/buttonAttractions"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/border"
                android:hint="@string/attractions"
                android:padding="5dp"
                android:textColor="@color/colorBlack" />
        </LinearLayout>
    </TableRow>
</TableLayout>
